# AI Knowledge Continuity System - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="AI Knowledge Continuity System"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATA PATHS
# =============================================================================
DATA_DIR=data
VECTOR_STORE_PATH=vector_store/faiss_index

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# Recommended models:
# - sentence-transformers/all-MiniLM-L6-v2 (fast, good quality)
# - sentence-transformers/all-mpnet-base-v2 (better quality, slower)
# - BAAI/bge-small-en-v1.5 (excellent quality)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Provider options: gemini, local, huggingface
LLM_PROVIDER=gemini

# Gemini Configuration (recommended for now)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Local LLM Configuration (uncomment when hardware is available)
# LOCAL_LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2
# LOCAL_LLM_DEVICE=cuda

# HuggingFace API Configuration (alternative cloud option)
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =============================================================================
# CHUNKING CONFIGURATION
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# RETRIEVAL CONFIGURATION
# =============================================================================
RETRIEVER_K=5
RETRIEVER_SCORE_THRESHOLD=0.5

# =============================================================================
# GENERATION CONFIGURATION
# =============================================================================
MAX_NEW_TOKENS=1024
TEMPERATURE=0.3
TOP_P=0.9

# =============================================================================
# MEMORY CONFIGURATION
# =============================================================================
MAX_CONVERSATION_HISTORY=10
